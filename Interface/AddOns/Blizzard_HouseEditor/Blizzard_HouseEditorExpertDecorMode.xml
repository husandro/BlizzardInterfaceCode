					</Frame>
					<Frame parentKey="RotateLeftInstruction" inherits="HouseEditorInstructionTemplate" parentArray="SelectedAndRotateSubmodeInstructions">
						<KeyValues>
							<KeyValue key="instructionText" value="HOUSING_BASIC_DECOR_ROTATE_LEFT_INSTRUCTION" type="global"/>
							<KeyValue key="keybindName" type="string" value="HOUSING_EXPERTDECORINCREMENT_ROTATELEFT"/>
							<KeyValue key="layoutIndex" value="8" type="number"/>
