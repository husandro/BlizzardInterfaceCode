					</Frame>
					<Frame parentKey="MoveRightInstruction" inherits="HouseEditorInstructionTemplate" parentArray="SelectedAndMoveSubmodeInstructions">
						<KeyValues>
							<KeyValue key="instructionText" value="BINDING_NAME_HOUSING_EXPERTDECORINCREMENT_RIGHT" type="global"/>
							<KeyValue key="keybindName" type="string" value="HOUSING_EXPERTDECORINCREMENT_RIGHT"/>
