							<KeyValue key="instructionText" value="BINDING_NAME_HOUSING_EXPERTDECORINCREMENT_FORWARD" type="global"/>
							<KeyValue key="keybindName" type="string" value="HOUSING_EXPERTDECORINCREMENT_FORWARD"/>
