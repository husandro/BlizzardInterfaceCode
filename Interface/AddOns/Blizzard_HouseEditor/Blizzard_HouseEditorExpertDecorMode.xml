						<KeyValues>
							<KeyValue key="instructionText" value="HOUSING_DECOR_REMOVE_INSTRUCTION" type="global"/>
							<KeyValue key="keybindName" type="string" value="HOUSING_REMOVEDECOR"/>
							<KeyValue key="layoutIndex" value="13" type="number"/>
						</KeyValues>
					</Frame>

					<!--<Frame parentKey="ResetInstruction" inherits="HouseEditorInstructionTemplate" parentArray="SelectedOrManipulatingInstructions">
						<KeyValues>
							<KeyValue key="layoutIndex" value="14" type="number"/>
						</KeyValues>
					</Frame>-->

