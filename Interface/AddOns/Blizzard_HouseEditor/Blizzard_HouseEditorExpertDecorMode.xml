							<KeyValue key="instructionText" value="BINDING_NAME_HOUSING_EXPERTDECORINCREMENT_SCALEDOWN" type="global"/>
							<KeyValue key="keybindName" type="string" value="HOUSING_EXPERTDECORINCREMENT_SCALEDOWN"/>
