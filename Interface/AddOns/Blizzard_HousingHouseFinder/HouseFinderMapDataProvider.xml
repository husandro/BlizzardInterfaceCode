<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\Blizzard_SharedXML\UI.xsd">

	<Frame name="SelectedPlotTooltipTemplate" inherits="TooltipBorderedFrameTemplate" mixin="SelectedPlotTooltipMixin" virtual="true">
		<Size x="150" y="74"/>
		<Scripts>
			<OnLoad method="OnLoad"/>
		</Scripts>
		<Layers>
			<Layer level="BORDER" textureSubLevel="3">
				<Texture parentKey="Arrow" atlas="Tooltip-NineSlice-BottomArrow" useAtlasSize="true">
					<Anchors>
						<Anchor point="TOP" relativePoint="BOTTOM" y="7"/>
					</Anchors>
				</Texture>
				<Texture parentKey="CornerIcon" atlas="housefinder_forsale-icon-circle">
					<Size x="32" y="32"/>
					<Anchors>
						<Anchor point="CENTER" relativePoint="TOPLEFT" x="2" y="-2"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<FontString parentKey="HeaderText" inherits="SystemFont_Shadow_Large" text="">
					<Size y="15"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="14" y="-14"/>
					</Anchors>
				</FontString>
				<FontString parentKey="SubText" inherits="Game13FontShadow" text="">
					<Size y="15"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.HeaderText" relativePoint="BOTTOMLEFT" x="0" y="-2"/>
					</Anchors>
					<Color r="1.0" g="0.82" b="0"/>
				</FontString>
				<FontString parentKey="FooterText" inherits="Game13FontShadow" text="">
					<Size y="15"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.SubText" relativePoint="BOTTOMLEFT" x="0" y="-2"/>
					</Anchors>
					<Color r="1.0" g="0.82" b="0"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="PriceMoneyFrame" inherits="SmallMoneyFrameTemplate" hidden="false">
				<Anchors>
					<Anchor point="LEFT" relativeKey="$parent.SubText"/>
				</Anchors>
			</Frame>
		</Frames>
	</Frame>

	<Frame name="HouseFinderHighlightedPlotTooltip" inherits="SelectedPlotTooltipTemplate" frameStrata="TOOLTIP" parent="UIParent" hidden="true"/>
	
	<Button name="HouseFinderPlotForSalePinTemplate" hidden="true" enableMouse="true" mixin="HouseFinderPlotForSalePinMixin" virtual="true">
		<Size x="42" y="42"/>
		<Layers>
			<Layer level="OVERLAY">
				<Texture parentKey="HighlightTexture" atlas="housefinder_forsale-plot-icon-highlight" useAtlasSize="true" alphaMode="ADD" hidden="true"/>
			</Layer>
			<Layer level="ARTWORK" textureSubLevel="-1">
				<Texture parentKey="SelectedUnderlay" atlas="housefinder_plot-selected-map-highlight" hidden="true">
					<Size x="42" y="42"/>
					<Anchors>
						<Anchor point="CENTER" x="1" y="-12"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		
		<NormalTexture atlas="housefinder_forsale-plot-icon"/>

		<Animations>
			<AnimationGroup parentKey="GlowAnim" setToFinalAlpha="true">
				<Alpha childKey="HighlightTexture" duration="0.75" fromAlpha="0.0" toAlpha="1.0"/>
				<Alpha childKey="HighlightTexture" duration="0.75" startDelay="1.0" fromAlpha="1.0" toAlpha="0.0"/>
			</AnimationGroup>
		</Animations>
	</Button>

	<Button name="HouseFinderFriendsPlotPinTemplate" hidden="true" enableMouse="true" mixin="HouseFinderFriendsPlotPinMixin" virtual="true">
		<Size x="24" y="32"/>
		<Layers>
			<Layer level="OVERLAY">
				<Texture parentKey="HighlightTexture" file="Interface\WorldMap\UI-QuestPoi-NumberIcons" alphaMode="ADD" hidden="true">
					<Size x="42" y="42"/>
					<Anchors>
						<Anchor point="CENTER"  y="4"/>
					</Anchors>
					<TexCoords left="0.625" right=".750" top="0.375" bottom="0.5"/>
				</Texture>
			</Layer>
			<Layer level="ARTWORK" textureSubLevel="-1">
				<Texture parentKey="SelectedUnderlay" atlas="housefinder_plot-selected-map-highlight" hidden="true">
					<Size x="42" y="42"/>
					<Anchors>
						<Anchor point="CENTER" y="-10"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<NormalTexture atlas="housefinder_friend-plot-icon"/>
	</Button>
</Ui>
