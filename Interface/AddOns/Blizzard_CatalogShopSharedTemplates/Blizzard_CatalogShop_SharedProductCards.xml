<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\..\..\..\WoW\Data\Interface\AddOns\Blizzard_SharedXML\UI.xsd">

	<!-- Default Product Card Template -->
	<Button name="DefaultCatalogShopCardTemplate" clipChildren="true" mixin="CatalogShopDefaultProductCardMixin" motionScriptsWhileDisabled="true" virtual="true">
		<!--
		nonInteractive: for cases outside the catalog shop where behavior is overridden.
		useWideCardSettings: set for wide cards for determining the appropriate model scenes.
		<KeyValues>
			<KeyValue key="nonInteractive" value="false" type="boolean"/>
			<KeyValue key="useWideCardSettings" value="false" type="boolean"/>
		</KeyValues>
		-->
		<Frames>
			<Frame parentKey="InvisibleMouseOverFrame" mixin="InvisibleMouseOverFrameMixin" enableMouse="true" hidden="true">
				<Scripts>
					<OnEnter method="OnEnter"/>
					<OnLeave method="OnLeave"/>
				</Scripts>
			</Frame>

			<Frame parentKey="BackgroundContainer" frameLevel="100" setAllPoints="true" >
				<Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="Background" setAllPoints="true" />
					</Layer>
				</Layers>
			</Frame>

			<ModelScene parentKey="ModelScene" frameLevel="200" hidden="true" inherits="NoCameraControlModelSceneMixinTemplate" />

			<Frame parentKey="SelectedContainer" frameLevel="300" setAllPoints="true" >
				<Layers>
					<Layer level="BORDER">
						<Texture parentKey="FrameBackground" setAllPoints="true" />
					</Layer>
				</Layers>
			</Frame>			

			<Frame parentKey="ForegroundContainer" frameLevel="1000" setAllPoints="true" >
				<Layers>
					<Layer level="OVERLAY">
						<Texture parentKey="SquareIconBorder" atlas="shop-gold-rim" hidden="true" >
							<Size x="105" y="99"/>
							<Anchors>
								<Anchor point="TOP" x="0" y="-44" />
							</Anchors>
						</Texture>
						<Texture parentKey="CircleIconBorder" atlas="tokens-frame-large" hidden="true" >
							<Size x="109" y="109"/>
							<Anchors>
								<Anchor point="TOP" x="0" y="-40" />
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="OVERLAY" textureSubLevel="1">
						<Texture parentKey="ProductCounter" atlas="tokens-counterbg-large" hidden="true" >
							<Size x="38" y="38" />
							<Anchors>
								<Anchor point="BOTTOMRIGHT" relativeKey="$parent.CircleIconBorder" x="0" y="0"/>
							</Anchors>
						</Texture>
						<FontString parentKey="ProductCounterText" inherits="Game22Font" justifyV="TOP" justifyH="CENTER" hidden="true" >
							<Anchors>
								<Anchor point="CENTER" relativeKey="$parent.ProductCounter" relativePoint="CENTER" x="0" y="0"/>
							</Anchors>
							<Color color="WHITE_FONT_COLOR"/>
						</FontString>
					</Layer>
					<Layer level="ARTWORK">
						<Texture parentKey="DividerTop" atlas="shop-card-label-bg" hidden="true" useAtlasSize="true" />
						<FontString parentKey="Price" inherits="GameFontNormalLarge" wordwrap="true" justifyH="RIGHT">
							<Color color="NORMAL_FONT_COLOR"/>
						</FontString>
						<FontString parentKey="DiscountPrice" hidden="true" inherits="GameFontNormalMed3" mixin="AutoScalingFontStringMixin" wordwrap="true" justifyH="CENTER">
							<Color color="GREEN_FONT_COLOR"/>
							<KeyValues>
								<KeyValue key="minLineHeight" value="10" type="number"/>
							</KeyValues>
						</FontString>
						<FontString parentKey="OriginalPrice" hidden="true" inherits="GameFontNormalMed3" mixin="AutoScalingFontStringMixin" wordwrap="true" justifyH="CENTER">
							<Color color="GRAY_FONT_COLOR"/>
							<KeyValues>
								<KeyValue key="minLineHeight" value="10" type="number"/>
							</KeyValues>
						</FontString>
						<FontString parentKey="Name" inherits="GameFontNormalLarge"  mixin="AutoScalingFontStringMixin" wordwrap="true" justifyV="MIDDLE" justifyH="CENTER" >
							<Color color="WHITE_FONT_COLOR"/>
							<KeyValues>
								<KeyValue key="minLineHeight" value="12" type="number"/>
							</KeyValues>
						</FontString>
						<Texture parentKey="TimeRemainingIcon" atlas="icon-clock" hidden="true" useAtlasSize="true" >
							<Anchors>
								<Anchor point="TOPLEFT" x="20" y="-20" />
							</Anchors>
						</Texture>
						<FontString parentKey="TimeRemaining" inherits="GameFontHighlightLarge" wordwrap="false" justifyV="MIDDLE" justifyH="LEFT" />
						<Texture parentKey="RectIcon" hidden="true">
							<Size x="85" y="85"/>
							<Anchors>
								<Anchor point="CENTER" relativeKey="$parent.SquareIconBorder" x="0" y="0" />
							</Anchors>
						</Texture>
						<Texture parentKey="CircleIcon" hidden="true">
							<Size x="84" y="84"/>
							<Anchors>
								<Anchor point="CENTER" relativeKey="$parent.CircleIconBorder" x="0" y="0" />
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="OVERLAY" textureSubLevel="2" >
						<Texture parentKey="PurchasedIcon" atlas="perks-owned-small" hidden="true" useAtlasSize="true" >
							<Anchors>
								<Anchor point="TOPRIGHT" x="-22" y="-22" />
							</Anchors>
						</Texture>
						<Texture parentKey="DiscountSaleTag" atlas="shop-saletag" useAtlasSize="true" hidden="true" >
							<Anchors>
								<Anchor point="TOPRIGHT" x="-3" y="-11" />
							</Anchors>
						</Texture>
						<FontString parentKey="DiscountAmount" inherits="SystemFont_Shadow_Large" wordwrap="false" justifyV="MIDDLE" justifyH="CENTER" hidden="true" >
							<Size x="60" y="19"/>
							<Color color="WHITE_FONT_COLOR"/>
							<Anchors>
								<Anchor point="TOPRIGHT" x="-4" y="-33" />
							</Anchors>
						</FontString>
						<Texture parentKey="Strikethrough" texelSnappingBias="0.0" snapToPixelGrid="false" >
							<Size x="1" y="2"/>
							<Color color="GRAY_FONT_COLOR"/>
						</Texture>
					</Layer>
					<Layer level="ARTWORK" textureSubLevel="1">
						<Texture parentKey="HoverTexture" hidden="true" alphaMode="ADD" setAllPoints="true" />
					</Layer>
				</Layers>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad" />
			<OnShow method="OnShow" />
			<OnEnter method="OnEnter" />
			<OnLeave method="OnLeave" />
			<OnClick method="OnClick" />
			<OnMouseDown method="OnMouseDown" />
			<OnMouseUp method="OnMouseUp" />
		</Scripts>
	</Button>

	<!--
		Large Card Templates are used in the main catalog view, frequently in the Featured section of the catalog, or other important sections.

		Generic Wide Product Card Template -->
	<Button name="WideCatalogShopProductCardTemplate" mixin="WideCatalogShopProductCardMixin" inherits="DefaultCatalogShopCardTemplate" virtual="true" >
		<Size x="558" y="322"/>
		<KeyValues>
			<KeyValue key="useWideCardSettings" value="true" type="boolean"/>
			<KeyValue key="defaultBackground" value="shop-card-wide-bg" type="string"/>
			<KeyValue key="defaultFrameTexture" value="shop-card-wide-frame-default" type="string"/>
			<KeyValue key="selectedFrameTexture" value="shop-card-wide-frame-selected" type="string"/>
			<KeyValue key="hoverFrameTexture" value="shop-card-wide-frame-hover" type="string"/>
			<KeyValue key="discountedBackground" value="shop-card-wide-bg" type="string"/>
			<KeyValue key="ownedBackground" value="shop-card-wide-bg" type="string"/>
			<KeyValue key="expiringBackground" value="shop-card-wide-bg" type="string"/>
			<KeyValue key="newBackground" value="shop-card-wide-bg" type="string"/>
			<KeyValue key="classicTexture" value="shop-card-wide-bg" type="string"/>
		</KeyValues>
	</Button>
</Ui>
